<body>

<div class="container">
<h1>Schusszähler</h1>

<label>Neues Sportgerät</label>
<input type="text" id="geraetNeu" placeholder="z.B. Stgw 57/03">
<button class="secondary" onclick="neuesGeraet()">Sportgerät hinzufügen</button>

<label>Sportgerät auswählen</label>
<select id="geraetSelect" onchange="ladeGeraet()">
<option value="">– auswählen –</option>
</select>

<label>Startsaldo Schusszahl</label>
<input type="number" id="startsaldo" oninput="aktualisieren()">

<label>Neuer Eintrag (Munition)</label>
<input type="number" id="neuerEintrag">
<button class="primary" onclick="addEintrag()">Eintrag hinzufügen</button>

<div class="total">
Total Schusszahl<br>
<span id="total">0</span>
</div>

<button class="secondary" onclick="laufwechsel()">Neuer Lauf</button>
<button class="secondary" onclick="exportCSV()">Export CSV</button>
<button class="danger" onclick="geraetLoeschen()">Sportgerät löschen (Neustart)</button>

<div class="info">
Optimiert für Handy · Daten lokal gespeichert
</div>
</div>

<script>
let daten = JSON.parse(localStorage.getItem("schusszaehler")) || {};
let aktuellesGeraet = "";

function speichern() {
    localStorage.setItem("schusszaehler", JSON.stringify(daten));
}

function ladeDropdown() {
    const sel = document.getElementById("geraetSelect");
    sel.innerHTML = '<option value="">– auswählen –</option>';
    for (let g in daten) {
        const o = document.createElement("option");
        o.value = g;
        o.text = g;
        sel.appendChild(o);
    }
}

function neuesGeraet() {
    const name = document.getElementById("geraetNeu").value.trim();
    if (!name) return;
    daten[name] = { startsaldo: 0, eintraege: [] };
    speichern();
    document.getElementById("geraetNeu").value = "";
    ladeDropdown();
    document.getElementById("geraetSelect").value = name;
    ladeGeraet();
}

function ladeGeraet() {
    aktuellesGeraet = document.getElementById("geraetSelect").value;
    if (!aktuellesGeraet) return;
    document.getElementById("startsaldo").value = daten[aktuellesGeraet].startsaldo;
    anzeigen();
}

function aktualisieren() {
    if (!aktuellesGeraet) return;
    daten[aktuellesGeraet].startsaldo =
        Number(document.getElementById("startsaldo").value) || 0;
    anzeigen();
}

function addEintrag() {
    if (!aktuellesGeraet) return;
    const wert = Number(document.getElementById("neuerEintrag").value);
    if (wert <= 0) return;

    daten[aktuellesGeraet].eintraege.push({
        datum: new Date().toLocaleDateString(),
        menge: wert
    });

    document.getElementById("neuerEintrag").value = "";
    speichern();
    anzeigen();
}

function anzeigen() {
    const g = daten[aktuellesGeraet];
    let total = g.startsaldo;
    g.eintraege.forEach(e => total += e.menge);
    document.getElementById("total").innerText = total;
    speichern();
}

function laufwechsel() {
    if (!aktuellesGeraet) return;
    if (!confirm("Neuen Lauf starten?")) return;
    daten[aktuellesGeraet] = { startsaldo: 0, eintraege: [] };
    document.getElementById("startsaldo").value = 0;
    anzeigen();
}

function geraetLoeschen() {
    if (!aktuellesGeraet) return;
    if (!confirm("Sportgerät wirklich komplett löschen?")) return;
    delete daten[aktuellesGeraet];
    aktuellesGeraet = "";
    speichern();
    ladeDropdown();
    document.getElementById("startsaldo").value = "";
    document.getElementById("total").innerText = "0";
}

function exportCSV() {
    if (!aktuellesGeraet) return;
    let csv = "Datum;Menge\n";
    daten[aktuellesGeraet].eintraege.forEach(e => {
        csv += `${e.datum};${e.menge}\n`;
    });
    const blob = new Blob([csv], { type: "text/csv" });
    const a = document.createElement("a");
    a.href = URL.createObjectURL(blob);
    a.download = aktuellesGeraet + "_Schussliste.csv";
    a.click();
}

window.onload = ladeDropdown;
</script>

</body>
</html>
