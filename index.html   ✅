<body>
<div class="container">
<h1>Schusszähler</h1>

<label>Neues Sportgerät</label>
<input id="newGun" placeholder="z.B. Stgw 57">
<button class="secondary" onclick="addGun()">Hinzufügen</button>

<label>Sportgerät auswählen</label>
<select id="gunSelect" onchange="loadGun()">
<option value="">– auswählen –</option>
</select>

<label>Startsaldo</label>
<input type="number" id="startValue" onchange="updateTotal()">

<label>Neuer Eintrag</label>
<input type="number" id="addValue">
<button class="primary" onclick="addEntry()">Eintrag hinzufügen</button>

<div class="total">
Gesamt<br>
<span id="total">0</span>
</div>

<button class="secondary" onclick="resetGun()">Neuer Lauf</button>
<button class="secondary" onclick="exportCSV()">Export CSV</button>
<button class="danger" onclick="deleteGun()">Sportgerät löschen</button>

<div class="info">
Offlinefähig · Daten nur lokal gespeichert
</div>
</div>

<script>
let data = JSON.parse(localStorage.getItem("shots")) || {};
let currentGun = "";

function save() {
    localStorage.setItem("shots", JSON.stringify(data));
}

function refreshSelect() {
    const s = document.getElementById("gunSelect");
    s.innerHTML = '<option value="">– auswählen –</option>';
    for (let g in data) {
        const o = document.createElement("option");
        o.value = g;
        o.textContent = g;
        s.appendChild(o);
    }
}

function addGun() {
    const name = document.getElementById("newGun").value.trim();
    if (!name) return;
    data[name] = { start: 0, entries: [] };
    document.getElementById("newGun").value = "";
    save();
    refreshSelect();
    document.getElementById("gunSelect").value = name;
    loadGun();
}

function loadGun() {
    currentGun = document.getElementById("gunSelect").value;
    if (!currentGun) return;
    document.getElementById("startValue").value = data[currentGun].start;
    updateTotal();
}

function updateTotal() {
    if (!currentGun) return;
    data[currentGun].start = Number(document.getElementById("startValue").value) || 0;
    let sum = data[currentGun].start;
    data[currentGun].entries.forEach(e => sum += e);
    document.getElementById("total").textContent = sum;
    save();
}

function addEntry() {
    if (!currentGun) return;
    const v = Number(document.getElementById("addValue").value);
    if (v <= 0) return;
    data[currentGun].entries.push(v);
    document.getElementById("addValue").value = "";
    updateTotal();
}

function resetGun() {
    if (!currentGun) return;
    if (!confirm("Neuen Lauf starten?")) return;
    data[currentGun] = { start: 0, entries: [] };
    document.getElementById("startValue").value = 0;
    updateTotal();
}

function deleteGun() {
    if (!currentGun) return;
    if (!confirm("Sportgerät wirklich löschen?")) return;
    delete data[currentGun];
    currentGun = "";
    save();
    refreshSelect();
    document.getElementById("total").textContent = "0";
}

function exportCSV() {
    if (!currentGun) return;
    let csv = "Eintrag\n";
    data[currentGun].entries.forEach(e => csv += e + "\n");
    const blob = new Blob([csv], { type: "text/csv" });
    const a = document.createElement("a");
    a.href = URL.createObjectURL(blob);
    a.download = currentGun + "_schussliste.csv";
    a.click();
}

window.onload = refreshSelect;
</script>
</body>
</html>
