    width: 100%;
    padding: 10px;
    margin-top: 6px;
    font-size: 16px;
    border-radius: 6px;
    border: 1px solid #ccc;
}

button {
    cursor: pointer;
}

.primary {
    background: #0078d4;
    color: white;
    border: none;
}

.secondary {
    background: #eeeeee;
}

.danger {
    background: #c0392b;
    color: white;
    border: none;
}

.total {
    margin-top: 16px;
    padding: 14px;
    background: #fafafa;
    border: 1px solid #ddd;
    border-radius: 6px;
    text-align: center;
    font-size: 20px;
    font-weight: bold;
}

